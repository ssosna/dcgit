def gitCommit() {
    sh "git rev-parse HEAD > GIT_COMMIT"
    def gitCommit = readFile('GIT_COMMIT').trim()
    sh "rm -f GIT_COMMIT"
    return gitCommit
}

node {
    // Checkout source code from Git
    stage 'Checkout'
    deleteDir()
    checkout scm

    // Build Docker image
    stage 'Build'
    sh "echo ${WORKSPACE}"

}